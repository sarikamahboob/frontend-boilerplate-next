{
  "name": "frontend_boilerplate",
  "version": "1.4.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "build:export": "next build && next export",
    "release": "standard-version",
    "commit": "cz",
    "prepare": "if [ \"$SKIP_HUSKY\" != \"1\" ]; then husky install && chmod ug+x .husky/*; fi"
  },
  "dependencies": {
    "husky": "^9.0.11",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "standard-version": "^9.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "jest": "^29.7.0",
    "semantic-release": "^23.1.1",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
